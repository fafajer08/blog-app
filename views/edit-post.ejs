<%- include("partials/header") %>

<main class="max-w-2xl mx-auto mt-10 px-4">
  <h2 class="text-2xl font-bold mb-6">Edit Post</h2>
  <form method="POST" action="/edit/<%= index %>" class="bg-white p-6 rounded shadow space-y-4">
    <div>
      <label for="title" class="block font-semibold mb-1">Title</label>
      <input type="text" id="title" name="title" value="<%= post.title %>" required class="w-full border border-gray-300 rounded px-3 py-2">
    </div>
    <div>
      <label for="content" class="block font-semibold mb-1">Content</label>
      <textarea id="content" name="content" required rows="5" class="w-full border border-gray-300 rounded px-3 py-2"><%= post.content %></textarea>
    </div>
    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
      Update
    </button>
  </form>
</main>
